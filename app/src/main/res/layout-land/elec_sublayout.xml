<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:showIn="@layout/activity_layout"
                tools:context=".Connection">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout3">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Engine Temp"
                android:id="@+id/textView9"
                android:paddingLeft="7dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <edu.msoe.smv.view.VerticalGoldilocksBar
                    android:id="@+id/vertTemp2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:progress="60"
                    android:progressDrawable="@android:color/transparent"
                    android:thumb="@drawable/seek_thumb_normal"
                    android:thumbOffset="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="4dp"
                    android:rotation="0"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="254 Â°F"
                    android:id="@+id/engineTempLabel"
                    android:layout_marginTop="10dp"
                    android:textColor="#232323"
                    android:gravity="left"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.6">
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1.2"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="42"
                    android:id="@+id/speedLabel"
                    android:textSize="90sp"
                    android:textStyle="bold"
                    android:textColor="#232323"
                    android:layout_weight="1"
                    android:paddingRight="8dp"
                    android:gravity="bottom|end"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="MPH"
                    android:id="@+id/textView2"
                    android:layout_weight="1.5"
                    android:layout_gravity="top|bottom"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout2"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_weight="1.4">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3,500"
                    android:id="@+id/rpmLabel"
                    android:textSize="40sp"
                    android:gravity="end"
                    android:textStyle="bold"
                    android:textColor="#232323"
                    android:layout_weight="1"
                    android:paddingRight="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="RPM"
                    android:id="@+id/textView4"
                    android:layout_weight="1.5"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="00:00.00"
                        android:id="@+id/lapTime1"
                        android:layout_weight="1"
                        android:textSize="40sp"
                        android:textIsSelectable="false"
                        android:gravity="right"
                        android:paddingRight="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="00:00.00"
                        android:id="@+id/lapTime2"
                        android:layout_weight="1"
                        android:gravity="bottom|right"
                        android:paddingRight="10dp"
                        android:textSize="30sp"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Current Lap"
                        android:id="@+id/textView"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:gravity="left|bottom"
                        android:paddingBottom="2dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Running Time"
                        android:id="@+id/textView5"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_weight="1"
                        android:gravity="left|bottom"
                        android:paddingBottom="2dp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:weightSum="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Air/Fuel Ratio"
                android:id="@+id/textView3"
                android:gravity="right"
                android:paddingRight="7dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="52dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="94 %"
                    android:id="@+id/oxygenPercLabel"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:textColor="#232323"/>

                <edu.msoe.smv.view.VerticalGoldilocksBar
                    android:id="@+id/vertTemp1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:max="100"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:progress="30"
                    android:progressDrawable="@android:color/transparent"
                    android:thumb="@drawable/seek_thumb_normal"
                    android:thumbOffset="12dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="4dp"
                    android:rotation="0"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
